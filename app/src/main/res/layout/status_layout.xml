<?xml version="1.0" encoding="utf-8"?>
<com.oort.bunny.xxstatusbar.XXStatusBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="18:55:05"
        android:textColor="@color/icon_color"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/dianliang"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dip"
        android:src="@drawable/ic_po_pro" />

    <TextView
        android:id="@+id/dianliang_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dip"
        android:layout_toLeftOf="@id/dianliang"
        android:text="50%"
        android:textColor="@color/icon_color"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/xinhao"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dip"
        android:src="@drawable/ic_xinhao" />

    <TextView
        android:id="@+id/yunyingshang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/xinhao"
        android:text="中国移动"
        android:textColor="@color/icon_color"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/yunyingshang"
        android:src="@drawable/ic_wifi" />
</com.oort.bunny.xxstatusbar.XXStatusBarLayout>